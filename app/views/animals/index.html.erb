<p id="notice"><%= notice %></p>

<div class="columns is-multiline  has-background-white-ter">
  <% @animals.each do |animal| %>
    <div class="column is-one-quarter">
      <div class="card">
        <div class="card-image">
          <% if animal.avatar.attached?%>
            <figure class="image is-square">
            <%= image_tag url_for(animal.avatar) %>
            </figure>
          <% end %>
        </div>
        
        <div class="card-content"> 
          <h1 class="subtitle"><%= animal.name %></h1>
        </div>      
      </div>
    </div>
    
  <% end %>
</div>
  


<br>

<%= link_to 'Нова тварина', new_animal_path, class: 'button is-large is-primary' %>
